<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".state_first">

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/statistic_backgroud"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="전신"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/wholeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"
                android:text="10분"
                android:textColor="#000000"
                android:textSize="45sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="상체"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/upperT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:text="10분"
                android:textSize="45sp" />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="하체"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lowerT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:text="10분"
                android:textSize="45sp" />

            <Button
                android:id="@+id/goalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="#00ff0000"
                android:text="목표날짜 설정하기"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="italic|bold" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:layout_marginTop="35sp"
                android:layout_marginLeft="300sp"
                android:src="@drawable/share" />



        </LinearLayout>
    </FrameLayout>

</LinearLayout>